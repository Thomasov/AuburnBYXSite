@model BYX.Models.Admin

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(f => f.Admin_ID)
    
<div class="row">
        <div class="col-lg-4 col-sm-6">

            <div class="form-group">
                @Html.LabelFor(model => model.Member_ID, "Member", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.Member_ID, (SelectList)ViewBag.Members, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Member_ID, "Member Type", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.Role_ID, (SelectList)ViewBag.Roles, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Done" class="btn btn-default" /> |
                @Html.ActionLink("Cancel", "Index")
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
