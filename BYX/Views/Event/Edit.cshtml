@model BYX.Models.BYXEvent

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-lg-12">
        <h2>Edit @Model.Event_Name</h2>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "Please fix the following errors:", new { @class = "alert alert-danger" })
    @Html.HiddenFor(m => Model.Event_ID)
    @Html.HiddenFor(m => Model.Deleted)
    <div class="row">
        <div class="col-lg-4 col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Event_Name, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Event_Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Event_StartDateTime, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Event_StartDateTime, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EventType_ID, "Event Type", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.EventType_ID, (SelectList)ViewBag.EventTypeID, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}